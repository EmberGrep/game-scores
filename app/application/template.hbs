<div class="app">
  <nav class="top-nav">
    <ul class="top-nav__list">
      <li class="top-nav__brand">
        <h1 class="brand">Game Scores</h1>
      </li>
    </ul>
  </nav>
  <div class="app-main">
    {{outlet}}
  </div>

  {{#promise-dialog dialogType="confirm" as |resolve reject alert|}}
    <div class="alert-overlay">
      <div class="alert-box">
        {{alert.options.message}}

        <button onclick={{action reject}}>Cancel</button>
        <button onclick={{action resolve}}>Ok</button>
      </div>
    </div>
  {{/promise-dialog}}
</div>
