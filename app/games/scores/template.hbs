<section class="detail-content">
  <h2>Scores for {{model.name}}</h2>

  <p>There are {{model.scores.length}} scores for this game.</p>

  <ol class="game-scores">
    {{#each model.scores as |score|}}
      <li class="game-scores__item">
        <span class="game-scores__username">{{score.username}}</span>
        <span class="game-scores__score">{{score.score}}</span>
        {{#link-to "games.scores.edit" score class="game-scores__edit"}}<span class="fa fa-edit"></span>{{/link-to}}
        <button class="game-scores__remove" onclick={{route-action 'deleteScore' score}}>
          <span class="fa fa-remove"></span>
        </button>
      </li>
    {{/each}}
  </ol>
</section>

{{#footer-bar onsubmit=(route-action 'saveNewScore' model) btnText="Add Score" as |newScore|}}
  <label class="footer-form__label">Username</label>
  {{input type="text" class="footer-form__input" placeholder="Username" value=newScore.username}}

  <label class="footer-form__label">Score</label>
  {{input type="text" class="footer-form__input" placeholder="Score" value=newScore.score}}
{{/footer-bar}}
